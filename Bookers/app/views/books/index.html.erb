<h1>投稿一覧</h1>

<table>
	<thead>
		<tr>
		  <th scope="col">タイトル</th>
		  <th scope="col">感想</th>
		  <th></th>
		  <th></th>
		<tr>
	</thead>
	<tbody>
		<% @books.each do |book| %>
		<tr>
			<th><%= book.title %></th>
			<td><%= book.body %></td>
			<td><%= link_to "詳細" , book, class: 'show_#{id}' %></td>
            <td><%= link_to "削除" , book, class: 'destroy_#{id}', method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
        </tr>
        <% end %>
	</tbody>
</table>

<h1>新規投稿</h1>

<%= form_for(@book) do |f| %>

	<h4>タイトル</h4>
	<%= f.text_field :title, class: "book_title" %>

	<h4>感想</h4>
	<%= f.text_area :body, class: "book_body" %>

	<%= f.submit '投稿' %>
<% end %>