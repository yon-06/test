
<div class="container">
	<div class="row">
		<div class="col-lg-3">
			<div class="show_render">
			<h2>Reader's Info</h2>
			<%= attachment_image_tag @findbook.user, :profile_image, :fill, 70, 70, format: 'jpeg', fallback: "no-image.jpg", size: "50x50" %><br>
			<h3><span class="glyphicon glyphicon-user" aria-hidden="true">&nbsp</span><%= @findbook.user.name %></h3><br>
			<%= @findbook.user.introduction %><br>
			<% if @findbook.user == current_user %>
			<button type="button" class="btn btn-default btn-block">
				<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span><%= link_to "Edit", edit_user_path(current_user), class:"edit_user_#{current_user.id}" %>
				</button>
			<% end %>
			</div>
			<%= render 'books/new', book: @book %>
		</div>

		<div class="col-lg-9">

			<h2>Book Detail</h2>
			<table>
				<thead>
					<th class="col-lg-1"></th>
					<th class="col-lg-1"></th>
					<th class="col-lg-2"></th>
					<th class="col-lg-2"></th>
					<% if @findbook.user == current_user %>
					<th class="col-lg-1"><%= "Edit" %></th>
					<th class="col-lg-1"><%= "Delete" %></th>
					<% end %>
				</thead>

				<tbody>
					<td><%= @findbook.id %></td>
					<td><%= attachment_image_tag @findbook.user, :profile_image, :fill, 70, 70, format: 'jpeg', fallback: "no-image.jpg", size: "70x70" %></td>
					<td><%= link_to @findbook.user.name, user_path(@findbook.user), class:"user_#{@findbook.user.id}" %></td>
					<td><%= @findbook.title %></td>
					<td><%= @findbook.body %></td>
						<% if @findbook.user == current_user %>
						<td><%= link_to "Edit", edit_book_path(@findbook.id), class:"edit_book_#{@findbook.id} btn btn-warning" %></td>
						<td><%= link_to "Delete", book_path, method: :delete, "data-confirm" => "Delete this post?", class:"destroy_book_#{@findbook.id} btn btn-danger" %></td>
						<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>