
<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <h2>Edit Book</h2>
    <%= form_for(@book) do |f| %>
    <%= render 'layouts/error_messages', model: f.object %>

      <label for="title">Title</label>
      <%= f.text_field :title, autofocus: true, class: "form-control book_title", id: "title", placeholder: "Title" %>

      <label for="review">Option</label>
            <%= f.text_area :body, autofocus: true, class: "form-control book_body", id: "body", placeholder: "Option" %>

            <%= f.submit "Update", class: "btn btn-lg btn-block btn-default" %>
            <% end %>
            <%= link_to "Show", book_path(@book), class:"book_#{@book.id} btn btn-primary" %>
            
    </div>
  </div>
</div>