<div class="show_render">
	<h2>User Info</h2>
		<%= attachment_image_tag current_user, :profile_image, :fill, 70, 70, format: 'jpeg', fallback: "no-image.jpg", size: "70x70" %><br>
		<table class="table">
			<tbody>
				<tr>
					<th scope="row">Name</th>
		 			<th><%= current_user.name %></th>
		 		</tr>
		 		<tr>
		 			<th scope="row">Introduction</th>
					<th><%= current_user.introduction %></th>
				</tr>
			</tbody>
		</table>
		<button type="button" class="btn btn-default btn-block">
		<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span><%= link_to "Edit", edit_user_path(current_user), class:"edit_user_#{user.id}" %>
	</button>
</div>