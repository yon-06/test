
<div class="container">
	<div class="row">
		<div class="col-lg-12">
			<h2>User Edit</h2>
			<%= form_for(@user) do |f| %>
			<%= render 'layouts/error_messages', model: f.object %>

			<label for="ProfileImage">Profile Image</label><br>
			<%= attachment_image_tag current_user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg", size: "100x100" %>
			<%= f.attachment_field :profile_image, autofocus: true, class: "form-control user_image", id: "AddProfile_image", fallback: "no_image.jpg", size: "70x70" %>

			<label for="username">Name</label>
			<%= f.text_field :name, autofocus: true, class: "form-control name", id: "inputName", placeholder: "Name" %>

			<label for="inputProfile">Introduction</label>
            <%= f.text_area :introduction, autofocus: true, class: "form-control introduction", id: "inputIntroduction", placeholder: "introduction" %>

            <%= f.submit "Update", class: "btn btn-lg btn-block btn-base-1 mt-20" %>
          	<% end %>

		</div>
	</div>
</div>